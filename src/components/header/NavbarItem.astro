---
interface Props {
	label: string
	href: string
}

const { label, href } = Astro.props

const pathname = Astro.url.pathname
const normalize = (p: string) => p.replace(/\/+$/, '') || '/'
const a = normalize(href)
const b = normalize(pathname)
const active = a === '/' ? b === '/' : b === a || b.startsWith(a + '/')
---

<a
	class:list={{
		'font-semibold text-slate-50': active,
		'text-slate-400 transition hover:text-slate-100': !active,
	}}
	href={href}
>
	{label}
</a>
