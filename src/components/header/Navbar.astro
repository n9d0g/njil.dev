---
const pathname = new URL(Astro.request.url).pathname
const currentPath = pathname.slice(1)
---

<nav class="flex justify-center gap-4 py-4">
	<a class={currentPath === '' ? 'font-bold' : ''} href="/">home</a>
	<a class={currentPath === 'work' ? 'font-bold' : ''} href="/work">work</a>
	<a class={currentPath === 'projects' ? 'font-bold' : ''} href="/projects">projects</a>
	<a class={currentPath === 'blog' ? 'font-bold' : ''} href="/blog">blog</a>
</nav>
