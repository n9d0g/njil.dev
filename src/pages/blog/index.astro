---
import Layout from '@layouts/Layout.astro'

const allBlogs = await Astro.glob('../blogs/*.md')
---

<Layout title="Nathan Lardizabal | Blog">
	<h1 class="font-semibold text-2xl mb-8">blog</h1>
	<section class="flex flex-col gap-4">
		{allBlogs.map((blog) => <a href={`blog${blog.frontmatter.href}`}>{blog.frontmatter.title}</a>)}
	</section>
</Layout>
