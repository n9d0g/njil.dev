---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Nathan Lardizabal | Contact">
	<h1 class="font-bold text-4xl">Contact page</h1>
	<section>
		<form class="border border-gray-200 rounded p-2 w-1/2 mx-auto">
			<div class="flex flex-col gap-2">
				<label for="name">Name</label>
				<input type="text" placeholder="name" name="name" class="bg-gray-200 p-1 rounded" />
			</div>
			<div class="flex flex-col gap-2">
				<label for="message">Message</label>
				<textarea placeholder="Message" name="message" class="bg-gray-200 p-1 rounded"></textarea>
			</div>
			<div class="my-4 flex justify-end">
				<button class="shadow-sm w-fit bg-gray-400 p-1 rounded">Submit</button>
			</div>
		</form>
	</section>
</Layout>
